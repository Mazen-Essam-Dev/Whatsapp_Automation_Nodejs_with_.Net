                }
            });
        }
    </script>

    <script>
        function updateSenderStatus(itemId) {

                $.ajax({
                    type: "POST",
                    url: "/Sender/DeleteSender",
                    data: { itemId: itemId },
                    success: function (result) {
                        console.log("Done");
                    setTimeout(function () {
                        location.href = '@Url.Action("Index", "Sender")';
                    }, 500); // التأخير لمدة .5 ثوانٍ
                    },
                    error: function () {
                    console.log("Error in Delete");
                    }
                });
        }
    </script>

