@using Bnan_Whatsapp.Api.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EditSenderViewModel;
@{
    ViewData["Title"] = "خدمة واتساب";
    //Layout = "~/Views/shared/_SharedLayout.cshtml";

}



<!-- نافذة منبثقة لتعديل مرسل -->
<div class="modal fade" id="EditSenderModal" tabindex="-1" aria-labelledby="AddSenderModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- العنوان والإغلاق -->
            <div class="modal-header border-0">
                <h1 class="modal-title fs-5 m-auto" id="AddSenderModalLabel">تعديل المرسل</h1>
                <button type="button" id="close_Edit_btn" class="btn-close m-0" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- محتوى النموذج -->
            <div class="modal-body AddSenderModal">
                <div class="row justify-content-center">
                    <div class="col-10">
                        <form asp-controller="Sender" asp-action="EditSender" id="EditSenderModalForm" method="post">
                            <input hidden asp-for="Edited_Sender.User_id" />
                            <input hidden id="senderCode" asp-for="Edited_Sender.BnanWhatsappSenderCode" />


                            <!-- رقم الجوال -->
                            <div class="mb-4">
                                <label for="phone2" class="form-label">رقم الجوال</label>
                                <div class="input-group">
                                    <input type="tel" class="form-control inputStyle tel-input" id="phone2" asp-for="Edited_Sender.BnanWhatsappSenderMobile" maxlength="20" autocomplete="off">
                                    <input type="tel" class="form-control inputStyle tel-input" id="CountryKey2" asp-for="Edited_Sender.BnanWhatsappSenderCountryKey" style="max-width:90px;" maxlength="6" autocomplete="off">
                                </div>
                                <div class="invaild">
                                    <span asp-validation-for="Edited_Sender.BnanWhatsappSenderMobile" class="text-danger"></span>
                                    <span asp-validation-for="Edited_Sender.BnanWhatsappSenderCountryKey" class="text-danger" style="margin-inline-start:120px;"></span>
                                    <span class="text-danger" id="phone2-Error"></span>
                                    <span class="text-danger" id="CountryKey2-Error" style="margin-inline-start:60px;"></span>
                                </div>
                            </div>

                            <!-- الاسم عربي -->
                            <div class="mb-4">
                                <label for="BnanWhatsappSenderArName2" class="form-label">الاسم عربي</label>
                                <label id="BnanWhatsappSenderArName2" class="form-label" style="margin-inline-start:30px"></label>
                                @*<input type="text" class="form-control inputStyle" id="BnanWhatsappSenderArName" asp-for="Edited_Sender.BnanWhatsappSenderArName" maxlength="50" autocomplete="off">
                                <div class="invaild">
                                <span asp-validation-for="Edited_Sender.BnanWhatsappSenderArName" class="text-danger"></span>
                                <span class="text-danger" id="BnanWhatsappSenderArName2-Error"></span>
                                </div>*@
                            </div>

                            <!-- الاسم انجليزي -->
                            <div class="mb-4">
                                <label for="BnanWhatsappSenderEnName2" class="form-label">الاسم انجليزي</label>
                                <label id="BnanWhatsappSenderEnName2" class="form-label" style="margin-inline-start:30px"></label>
                                @*<input type="text" class="form-control inputStyle" id="BnanWhatsappSenderEnName" asp-for="Edited_Sender.BnanWhatsappSenderEnName" maxlength="50" autocomplete="off">
                                <div class="invaild">
                                <span asp-validation-for="Edited_Sender.BnanWhatsappSenderEnName" class="text-danger"></span>
                                <span class="text-danger" id="BnanWhatsappSenderEnName2-Error"></span>
                                </div>*@
                            </div>

                            <!-- زر إرسال -->
                            <button type="button" class="btn Btn-Style w-100" onclick="submit_validateEditSenderForm()" >تحديث</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>