@using Bnan_Whatsapp.Api.ViewModels; 
@model Sender_UserVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "خدمة واتساب";
    Layout = "~/Views/shared/_SharedLayout.cshtml";

}

<div class="">
    <div class="container-fluid ">
        <div class="d-flex justify-content-center py-5 ">
            <div class="col-md-10 col-lg-5 loginCard mt-4">
                <img class="LoginLogo" src="/sysImages/BigLogo.abde25ef917b267ae580048beb3414c9.svg" alt="logo">
                <div class="row justify-content-center">
                    <div class="col py-5">
                        <h2 class="text-center">تسجيل الدخول</h2>
                    </div>
                    <div class="col-md-11">
                        <form method="post" asp-controller="Login" asp-action="LoginPage">
                            <div class="mb-1" style="text-align: center;">
                                <label id="error-pass" class="form-label" style="color:red;">@(Model?.statusError_pass ?? " ")</label>
                            </div>
                            <div class="mb-5">
                                <label for="Phone" class="form-label">الرمز</label>
                                <input type="text" class="form-control inputStyle" id="Phone" asp-for="BnanWhatsappSenderCode">
                            </div>
                            <div class="mb-5">
                                <label for="Password" class="form-label">كلمة السر</label>
                                <input type="password" class="form-control inputStyle" id="Password" asp-for="BnanWhatsappSenderPassword">
                            </div>
                            <button type="submit" class="btn Btn-Style w-100">تسجيل الدخول</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

